rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only allow users to access their own profile photos
    match /public/usersproflesphotos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 